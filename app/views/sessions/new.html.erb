<div class="log-in-bg">
    <div class="container">
        <div class="form-bg">
            <div class="form-container">
                <h1 class="center">Log In</h1>
                <%= form_tag sessions_path do %>
                <div class="field">
                    <!-- <%= label_tag :user_name %><br> -->
                    <%= text_field_tag(:user_name, nil, :class => "form-control", :placeholder => "Username") %>
                </div>
                <div class="field">
                    <!-- <%= label_tag :password %><br> -->
                    <%= password_field_tag(:password, nil, :class => "form-control", :placeholder => "Password") %>
                </div>
                <div class="actions">
                    <%= submit_tag("Log In", class:"submit") %>
                </div>
                <hr>
                <!-- <a href="#facebook" class="btn facebook">Log in with Facebook &nbsp;&nbsp;<i class="fa fa-facebook"></i></a>
        <a href="#google" class="btn google">Log in with Google+ &nbsp;&nbsp;<i class="fa fa-google-plus"></i></a> -->
                <% end %>
            </div>
        </div>
    </div>
</div>
